<p id="notice"><%= notice %></p>

<h1>Minutes</h1>

<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-striped table-condensed table-responsive">
      <thead>
        <tr>
          <th>Type</th>
          <th>Location</th>
          <th>Secretary</th>
          <th>President</th>
          <th>Director</th>
          <th>Treasurer</th>
          <th>Other party</th>
          <th>Escriibe property</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
        <% unless @minutes.empty? %>
          <% @minutes.each do |minute| %>
            <tr>
              <td><%= minute.company_type %></td>
              <td><%= minute.location %></td>
              <td><%= minute.secretary %></td>
              <td><%= minute.president %></td>
              <td><%= minute.director %></td>
              <td><%= minute.treasurer %></td>
              <td><%= minute.other_party %></td>
              <td><%= minute.escriibe_property %></td>
              <td>
                <%= link_to 'Show', minute, class: 'btn btn-default btn-xs' %>
                <%= link_to 'Edit', edit_minute_path(minute), class: "btn btn-info btn-xs"  %>
                <%= link_to 'Destroy', minute, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger btn-xs" %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <div class="panel-footer">
    <%= link_to('New Minute', new_minute_path, class: "btn btn-success btn-sm") %>
  </div>
</div>

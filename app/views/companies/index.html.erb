<p id="notice"><%= notice %></p>

<h1>Companies</h1>

<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-striped table-condensed table-responsive">
      <thead>
        <tr>
          <th>Name</th>
          <th>No</th>
          <th>Email</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td><%= company.name %></td>
            <td><%= company.no %></td>
            <td><%= company.email %></td>
            <td>
              <%= link_to 'Show', company, class: 'btn btn-default btn-xs' %>
              <%= link_to 'Edit', edit_company_path(company), class: "btn btn-info btn-xs"  %>
              <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-danger btn-xs" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

</div>
  <div class="panel-footer">
    <%= link_to('New Company', new_company_path, class: "btn btn-success btn-sm") %>
  </div>
</div>
